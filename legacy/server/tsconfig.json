{
  "compilerOptions": {
    "outDir": "build",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "pretty": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["es2018", "dom"],
    "importHelpers": true
  },
  "exclude": ["node_modules", "../../node_modules", "lib"],
  "include": ["src"]
}
